# NATS Configuration
NATS_URL=nats://nats.nats.svc.cluster.local:4222
NATS_STREAM=bluesky-posts
NATS_STREAM_NUM_REPLICAS=1
NATS_SUBJECT=bluesky.posts
NATS_CONSUMER_NAME=firehose-ingest
NATS_KV_BUCKET=firehose-state

# Service Configuration
SERVICE_NAME=nats-firehose-ingest
CURSOR_SAVE_INTERVAL=1000

# Filtering Configuration
ENABLE_TEXT_FILTERING=true
MIN_TEXT_LENGTH=10
MAX_TEXT_LENGTH=1000

# Performance Configuration
MAX_RETRIES=3

# Health Check Configuration
HEALTH_CHECK_PORT=8080
METRICS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console

